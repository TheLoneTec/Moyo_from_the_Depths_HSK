<Defs>
	<RecipeDef ParentName="SurgeryFlesh">
		<defName>InstallFakeTail_Moyo</defName>
		<label>install fake tail</label>
		<description>Install a fake tail.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing fake tail.</jobString>
		<workAmount>2000</workAmount>
		<skillRequirements>
			<Medicine>3</Medicine>
		</skillRequirements>
		<recipeUsers>
			<li>Alien_Moyo</li>
		</recipeUsers>			
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Moyo_FakeTail</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Moyo_FakeTail</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Moyo_Tail</li>
		</appliedOnFixedBodyParts>
		<addsHediff>Moyo_FakeTail</addsHediff>
	</RecipeDef>

